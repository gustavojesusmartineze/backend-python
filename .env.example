# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME="EdTech Platform"
ENVIRONMENT=development
DEBUG=true
VERSION=0.1.0

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Format: postgresql+asyncpg://user:password@host:port/database
APP_ENV=development
APP_DEBUG=true
DB_HOST=db
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=edtech_db
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/edtech_db
DB_ECHO=false

# PostgreSQL connection pool settings
DB_ECHO=false
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_PRE_PING=true

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password hashing
BCRYPT_ROUNDS=12

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:4200,http://localhost:3000,http://localhost:80

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://redis:6379/0
CACHE_TTL=300

# =============================================================================
# CELERY (Background Tasks)
# =============================================================================
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@edtech.local
SMTP_FROM_NAME=EdTech Platform

# =============================================================================
# AWS S3 (File Storage)
# =============================================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET=
S3_REGION=us-east-1
S3_ENDPOINT_URL=

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
LOG_LEVEL=DEBUG
SENTRY_DSN=

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_TWO_FACTOR_AUTH=false

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# =============================================================================
# FILE UPLOAD
# =============================================================================
MAX_UPLOAD_SIZE_MB=10
ALLOWED_UPLOAD_EXTENSIONS=jpg,jpeg,png,pdf,doc,docx,xls,xlsx

# =============================================================================
# TIMEZONE
# =============================================================================
TIMEZONE=America/Bogota