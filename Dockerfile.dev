# syntax=docker/dockerfile:1

# Use a slim, modern Python runtime
FROM python:3.12-slim

# Environment settings
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1
ENV APP_HOME=/usr/src/app

# Install system dependencies
RUN apt-get update \
    && apt-get install -y --no-install-recommends \
        build-essential \
        libpq-dev \
        curl \
    && rm -rf /var/lib/apt/lists/*

# Install uv (ultra-fast package installer)
RUN pip install uv

WORKDIR $APP_HOME

# Copy dependency file first to maximize layer caching
COPY ./requirements.txt .

# Install dependencies with uv (FAST)
RUN uv pip install --system -r requirements.txt
#RUN uv pip sync uv.lock --system

# Copy the project
COPY . .

EXPOSE 8000

# Default command for development
CMD ["uvicorn", "src.infrastructure.api.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]